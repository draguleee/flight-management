                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.NR_TEL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NR_TEL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group pt-4">
                <div class="text-center">
                    <input type="submit" value="Adaugă" class="btn btn-success d-inline-block" />
                    @Html.ActionLink("Înapoi", "Index", null, new { @class = "btn btn-primary d-inline-block" })
                </div>
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>


