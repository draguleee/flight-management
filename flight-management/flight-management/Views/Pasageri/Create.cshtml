@model flight_management.Models.PASAGERI

@{
    ViewBag.Title = "Adăugare - Pasageri";
}

<div class="text-center">
    <h2 class="pt-4 pb-4"> Adăugare Pasager </h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal centered-form-column">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.ID_PASAGERI, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.ID_PASAGERI, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ID_PASAGERI, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.NUME_PASAGER, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.NUME_PASAGER, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NUME_PASAGER, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.PRENUME_PASAGER, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.PRENUME_PASAGER, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PRENUME_PASAGER, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.DATA_NASTERII, new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.DATA_NASTERII, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.DATA_NASTERII, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.NATIONALITATE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.NATIONALITATE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NATIONALITATE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.NR_PASAPORT, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.NR_PASAPORT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NR_PASAPORT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.GEN, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.GEN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GEN, "", new { @class = "text-danger" })
                </div>
            </div>

