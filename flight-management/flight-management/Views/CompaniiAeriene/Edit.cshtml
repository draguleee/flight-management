@model flight_management.Models.COMPANII_AERIENE

@{
    ViewBag.Title = "Modifică - Companii Aeriene";
}

<div class="text-center">
    <h2 class="pt-4 pb-4">Modificare Companie Aeriană: @Model.NUME_COMPANIE </h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal centered-form-column">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID_COMPANII)

            <!-- Modificare camp - NUME_COMPANIE -->
            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.NUME_COMPANIE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.NUME_COMPANIE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NUME_COMPANIE, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Modificare camp - COD_COMPANIE -->
            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.COD_COMPANIE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.COD_COMPANIE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.COD_COMPANIE, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Modificare camp - TARA -->
            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.TARA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.TARA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TARA, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Modificare camp - AN_INFIINTARE -->
            <div class="form-group pt-2 text-center centered-form-column">
                @Html.LabelFor(model => model.AN_INFIINTARE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 text-center centered-form-column">
                    @Html.EditorFor(model => model.AN_INFIINTARE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AN_INFIINTARE, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Butoanele de salvare modificari si revenire la pagina CompaniiAeriene/Index-->
            <div class="form-group pt-4">
                <div class="text-center">
                    <input type="submit" value="Salvează Modificările" class="btn btn-success d-inline-block" />
                    @Html.ActionLink("Înapoi", "Index", null, new { @class = "btn btn-primary d-inline-block" })
                </div>
            </div>

        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>

