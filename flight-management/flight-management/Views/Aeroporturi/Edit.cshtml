@model flight_management.Models.AEROPORTURI

@{
    ViewBag.Title = "Modifică - Aeroport";
}

<div class="text-center">
    <h2 class="pt-4 pb-4"> Modificare Aeroport: @Model.NUME_AEROPORT</h2>
    <hr />

